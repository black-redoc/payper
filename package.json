{
  "name": "payper",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env -- wrangler dev --config wrangler.local.jsonc",
    "dev:next": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "dotenv -e .env -- wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "db:generate": "prisma generate",
    "db:studio": "dotenv -e .env -- wrangler d1 execute $D1_DATABASE_NAME --local --command",
    "d1:create": "dotenv -e .env -- wrangler d1 create $D1_DATABASE_NAME",
    "d1:migrate:generate": "prisma migrate diff --from-local-d1 --to-schema-datamodel ./prisma/schema.prisma --script",
    "d1:migrate:local": "dotenv -e .env -- wrangler d1 migrations apply $D1_DATABASE_NAME --local",
    "d1:migrate:remote": "dotenv -e .env -- wrangler d1 migrations apply $D1_DATABASE_NAME --remote",
    "d1:query:local": "dotenv -e .env -- wrangler d1 execute $D1_DATABASE_NAME --local --command",
    "d1:query:remote": "dotenv -e .env -- wrangler d1 execute $D1_DATABASE_NAME --remote --command",
    "prepare": "husky"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.3.0",
    "@prisma/adapter-d1": "^7.0.0",
    "@testing-library/react": "^16.3.0",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.6.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@prisma/client": "^6.19.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.8",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.8",
    "wrangler": "^4.46.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
